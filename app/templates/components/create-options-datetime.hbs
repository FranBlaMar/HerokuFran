<div class="box">
  {{#fm-form
    action='submit'
  }}
    {{#each groupedDatetimes as |groupedDatetime|}}
      {{fm-input-group
        type='time'
        step=900
        label=groupedDatetime.value
        content=groupedDatetime.items
        addElement='addOption'
        deleteElement='delOption'
      }}
    {{/each}}

    <div class='form-group'>
      <div class='col-sm-10 col-sm-offset-2'>
        <button {{action "adoptTimesOfFirstDay"}} class="btn btn-default adopt-times-of-first-day">{{t "create.options-datetime.copy-first-line"}}</button>
      </div>
    </div>
    {{#fm-submit
      inputWrapperClass='col-sm-10 col-sm-offset-2'
    }}
      {{t 'create.next'}}
    {{/fm-submit}}
  {{/fm-form}}
</div>
