{{#each groupedDatetimes as |groupedDatetime|}}
  {{fm-input-group
    type='time'
    step=900
    label=groupedDatetime.value
    content=groupedDatetime.items
    elementObject=optionsDateTimesTimeObject
  }}
{{/each}}

<div class='form-group'>
  <div class='col-sm-10 col-sm-offset-2'>
    <button {{action "copyFirstLine"}} class="btn btn-default button-copy-first-line">{{t "create.options-datetime.copy-first-line"}}</button>
  </div>
</div>
