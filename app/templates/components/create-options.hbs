<div class="box">
  {{#fm-form
    action='submit'
  }}
    {{#if isMakeAPoll}}
      {{create-options-text
        options=options
        addOption='addOption'
        deleteOption='deleteOption'
        submit='submit'
      }}
    {{else}}
      {{create-options-dates
        isDateTime=isDateTime
        options=options
        submit='submit'
      }}
      <div class='form-group'>
        <div class='col-sm-10 col-sm-offset-2'>
          {{bootstrap-switch
            checked=isDateTime
            labelText=(t 'create.options.defineTimes.label')
          }}
        </div>
      </div>
      {{#if isDateTime}}
        {{create-options-datetime
          options=options
        }}
      {{/if}}
    {{/if}}

    {{#fm-submit
      inputWrapperClass='col-sm-10 col-sm-offset-2'
    }}
      {{t 'create.next'}}
    {{/fm-submit}}
  {{/fm-form}}
</div>
