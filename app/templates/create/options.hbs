<div class="box">
  {{#if model.isMakeAPoll}}

    {{#fm-form
      action='submit'
      isValid=validations.isValid
    }}
      {{fm-input-group
        content=optionsTexts
        label=(t 'create.options.options.label')
        errors=validations.attrs.optionsTexts.messages
        minimumInputFields=2
        elementObject=optionsTextsObject
      }}
      {{#fm-submit
        fieldWrapperClass='col-sm-10 col-sm-offset-2'
      }}
        {{t 'create.next'}}
      {{/fm-submit}}
    {{/fm-form}}

  {{else}}

    <div id="datepicker">
      {{bootstrap-datepicker-inline
          value=optionsBootstrapDatepicker
          multidate=true
          calendarWeeks=true
          todayHighlight=true
          language=language.selected}}
    </div>

    {{#form-wrapper}}
      {{#input enoughOptions}}
        {{#if view.showError}}
          {{error-field enoughOptions}}
        {{/if}}
      {{/input}}

      {{input model.isDateTime as='checkbox'
         labelTranslation="create.options.defineTimes.label"
      }}
    {{/form-wrapper}}

    <button {{action "submit"}} class="btn btn-default btn-primary button-next"> {{t 'create.next'}} </button>

  {{/if}}
</div>
